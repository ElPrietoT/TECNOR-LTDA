@import 'nib/vendor'
@import 'nib/gradients'


vendor-prefixes = o ms moz webkit



body
	background white
	color #313131
	font-family "Open Sans"
	font-size: 16px
	margin 0
figure
	margin 0
header
	margin 0 auto
	width 80%

	figure#logo
		margin 0 auto

		img
			display block
			margin 0 auto
			width 300px

	nav
		margin 0 auto
		position relative
		text-align center
		ul
			list-style none
			margin 0
			padding 0
			li
				display inline-block
				margin 0 1em 0 0
				a
					border-radius .2em .2em 0 0
					color #313131
					display block
					padding .5em
					transition .5s
					text-decoration none
				a:hover
					background #ea7120
					color white


.img_inicio img
		max-width 100%
#contenido
	margin 1em auto
	width 80%

footer
	background #313131
	color rgba(255,255,255,.5)
	font-size 12px
	text-align center
	padding .5em
	p:first-child
		margin-bottom 0
	p:last-child
		margin-top 0
	p:last-child:before
		content "- "
	p:last-child:after
		content " -"


@import 'media.styl'
